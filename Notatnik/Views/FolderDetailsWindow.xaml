<Window x:Class="Notatnik.Views.FolderDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nowy folder" Height="150" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Nazwa folderu:" Margin="0,0,0,5"/>
            <TextBox x:Name="TextBoxName" MinWidth="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="5,0" Click="Ok_Click"/>
            <Button Content="Anuluj" Width="75" Margin="5,0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
