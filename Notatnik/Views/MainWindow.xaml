<Window x:Class="Notatnik.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Notatnik.ViewModels"
        Title="Notatnik"
        Height="600"
        Width="1150"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI"
        FontSize="12">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <!-- Styl nagłówków kolumn (jasnoszare tło, pogrubiona czcionka) -->
    <Window.Resources>
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,3"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <!-- 1) Lewa kolumna – Foldery: zawsze 250 px szerokości -->
            <ColumnDefinition Width="250"/>
            <!-- 2) Separator (GridSplitter) – 5 px -->
            <ColumnDefinition Width="5"/>
            <!-- 3) Prawa kolumna – Notatki: zajmuje pozostałe miejsce (*) -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ================= Sekcja FOLDERÓW ================= -->
        <GroupBox Header="Foldery"
                  FontWeight="Bold"
                  Grid.Column="0"
                  Margin="0,0,5,0"
                  BorderBrush="LightGray"
                  BorderThickness="1">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <!-- Lista folderów rośnie do dostępnej wysokości -->
                    <RowDefinition Height="*" />
                    <!-- Przycisk „Dodaj folder” i „Usuń zaznaczone” -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- LISTVIEW FOLDERÓW -->
                <ListView x:Name="ListViewFolders"
                          ItemsSource="{Binding Folders}"
                          SelectedItem="{Binding SelectedFolder}"
                          SelectionMode="Single"
                          Grid.Row="0"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.View>
                        <GridView>
                            <!-- 1) Kolumna z checkboxami dla usuwania -->
                            <GridViewColumn Width="30">
                                <GridViewColumn.Header>
                                    <CheckBox x:Name="HeaderCheckboxFolders"
                                              Checked="HeaderCheckboxFolders_Checked"
                                              Unchecked="HeaderCheckboxFolders_Unchecked"
                                              ToolTip="Zaznacz/odznacz wszystkie foldery"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsMarkedForDeletion, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- 2) Kolumna „Nazwa folderu” -->
                            <GridViewColumn Header="Nazwa folderu"
                                            Width="180"
                                            DisplayMemberBinding="{Binding Name}" />
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Przyciski pod ListView folderów -->
                <StackPanel Orientation="Horizontal"
                            Grid.Row="1"
                            HorizontalAlignment="Right"
                            Margin="0,5,0,0">
                    <Button Content="Dodaj folder"
                            Width="100"
                            Margin="0,0,5,0"
                            Command="{Binding AddFolderCommand}"/>
                    <Button Content="Usuń zaznaczone"
                            Width="120"
                            Command="{Binding DeleteMarkedFoldersCommand}"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- ================= Separator: GridSplitter ================= -->
        <GridSplitter Grid.Column="1"
                      Width="5"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      ShowsPreview="True"
                      Background="LightGray"/>

        <!-- ================= Sekcja NOTATEK ================= -->
        <GroupBox Header="Notatki"
                  FontWeight="Bold"
                  Grid.Column="2"
                  Margin="5,0,0,0"
                  BorderBrush="LightGray"
                  BorderThickness="1">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <!-- Lista notatek rośnie do dostępnej wysokości -->
                    <RowDefinition Height="*" />
                    <!-- Przycisk „Dodaj notatkę” i „Usuń zaznaczone” -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- LISTVIEW NOTATEK: dwuklik uruchamia edycję notatki -->
                <ListView x:Name="ListViewNotes"
                          ItemsSource="{Binding Notes}"
                          SelectedItem="{Binding SingleSelectedNote}"
                          SelectionMode="Single"
                          Grid.Row="0"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          MouseDoubleClick="ListViewNotes_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <!-- 1) Kolumna z checkboxami dla usuwania notatek -->
                            <GridViewColumn Width="30">
                                <GridViewColumn.Header>
                                    <CheckBox x:Name="HeaderCheckboxNotes"
                                              Checked="HeaderCheckboxNotes_Checked"
                                              Unchecked="HeaderCheckboxNotes_Unchecked"
                                              ToolTip="Zaznacz/odznacz wszystkie notatki"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsMarkedForDeletion, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- 2) Kolumna „Tytuł” -->
                            <GridViewColumn Header="Tytuł"
                                            Width="220"
                                            DisplayMemberBinding="{Binding Title}" />

                            <!-- 3) Kolumna „Podgląd” (tekst zawija się) -->
                            <GridViewColumn Header="Podgląd"
                                            Width="300">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Snippet}"
                                                   TextWrapping="Wrap"
                                                   VerticalAlignment="Top"
                                                   Margin="2,0,2,0"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- 4) Kolumna „Utworzono” -->
                            <GridViewColumn Header="Utworzono"
                                            Width="130">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding CreatedAt, StringFormat=\{0:yyyy-MM-dd HH:mm\}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- 5) Kolumna „Zmodyfikowano” -->
                            <GridViewColumn Header="Zmodyfikowano"
                                            Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ModifiedAt, StringFormat=\{0:yyyy-MM-dd HH:mm\}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Przyciski pod ListView notatek (usunęliśmy „Edytuj notatkę”) -->
                <StackPanel Orientation="Horizontal"
                            Grid.Row="1"
                            HorizontalAlignment="Right"
                            Margin="0,5,0,0">
                    <Button Content="Dodaj notatkę"
                            Width="100"
                            Margin="0,0,5,0"
                            Command="{Binding AddNoteCommand}"/>
                    <!-- <Button Content="Edytuj notatkę" Width="100" Margin="0,0,5,0" 
                            Command="{Binding EditNoteCommand}"/> -->
                    <Button Content="Usuń zaznaczone"
                            Width="120"
                            Command="{Binding DeleteMarkedNotesCommand}"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
