<Window x:Class="Notatnik.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Notatnik.ViewModels"
        Title="Notatnik" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI" FontSize="12">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>

        <!-- Sekcja Foldery -->
        <GroupBox Header="Foldery" FontWeight="Bold"
                  Grid.Column="0" Margin="0,0,5,0"
                  BorderBrush="LightGray" BorderThickness="1">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Lista folderów -->
                <ListView x:Name="ListViewFolders"
                          ItemsSource="{Binding Folders}"
                          SelectedItem="{Binding SelectedFolder}"
                          SelectionMode="Single"
                          SelectedIndex="0"
                          Grid.Row="0">
                    <ListView.View>
                        <GridView>
                            <!-- Kolumna z checkboxami -->
                            <GridViewColumn Width="30">
                                <GridViewColumn.Header>
                                    <CheckBox x:Name="HeaderCheckboxFolders"
                                              Checked="HeaderCheckboxFolders_Checked"
                                              Unchecked="HeaderCheckboxFolders_Unchecked"
                                              ToolTip="Zaznacz/odznacz wszystkie foldery"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsMarkedForDeletion, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Nazwa folderu -->
                            <GridViewColumn Header="Nazwa folderu" Width="200"
                                            DisplayMemberBinding="{Binding Name}" />
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Przyciski pod listą -->
                <StackPanel Orientation="Horizontal" Grid.Row="1"
                            HorizontalAlignment="Right" Margin="0,5,0,0">
                    <Button Content="Dodaj folder" Width="100" Margin="0,0,5,0"
                            Command="{Binding AddFolderCommand}"/>
                    <Button Content="Usuń zaznaczone" Width="120"
                            Command="{Binding DeleteMarkedFoldersCommand}"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Separator pionowy -->
        <GridSplitter Grid.Column="1" Width="5"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      ShowsPreview="True"
                      Background="LightGray"/>

        <!-- Sekcja Notatki -->
        <GroupBox Header="Notatki" FontWeight="Bold"
                  Grid.Column="2" Margin="5,0,0,0"
                  BorderBrush="LightGray" BorderThickness="1">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Lista notatek -->
                <ListView x:Name="ListViewNotes"
                          ItemsSource="{Binding Notes}"
                          SelectedItem="{Binding SingleSelectedNote}"
                          SelectionMode="Single"
                          Grid.Row="0">
                    <ListView.View>
                        <GridView>
                            <!-- Kolumna z checkboxami -->
                            <GridViewColumn Width="30">
                                <GridViewColumn.Header>
                                    <CheckBox x:Name="HeaderCheckboxNotes"
                                              Checked="HeaderCheckboxNotes_Checked"
                                              Unchecked="HeaderCheckboxNotes_Unchecked"
                                              ToolTip="Zaznacz/odznacz wszystkie notatki"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsMarkedForDeletion, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Tytuł notatki -->
                            <GridViewColumn Header="Tytuł" Width="200"
                                            DisplayMemberBinding="{Binding Title}" />

                            <!-- Podgląd / snippet -->
                            <GridViewColumn Header="Podgląd" Width="250"
                                            DisplayMemberBinding="{Binding Snippet}" />

                            <!-- Data utworzenia -->
                            <GridViewColumn Header="Utworzono" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding CreatedAt, StringFormat=\{0:yyyy-MM-dd HH:mm\}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Data modyfikacji -->
                            <GridViewColumn Header="Zmodyfikowano" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ModifiedAt, StringFormat=\{0:yyyy-MM-dd HH:mm\}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Przyciski pod listą -->
                <StackPanel Orientation="Horizontal" Grid.Row="1"
                            HorizontalAlignment="Right" Margin="0,5,0,0">
                    <Button Content="Dodaj notatkę" Width="100" Margin="0,0,5,0"
                            Command="{Binding AddNoteCommand}"/>
                    <Button Content="Edytuj notatkę" Width="100" Margin="0,0,5,0"
                            Command="{Binding EditNoteCommand}"/>
                    <Button Content="Usuń zaznaczone" Width="120"
                            Command="{Binding DeleteMarkedNotesCommand}"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
