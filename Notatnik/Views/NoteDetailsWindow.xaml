<Window x:Class="Notatnik.Views.NoteDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szczegóły notatki" Height="350" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Tytuł:"/>
        <TextBox Grid.Row="0" Margin="50,0,0,0" Text="{Binding Note.Title, Mode=TwoWay}"/>

        <TextBlock Grid.Row="1" Text="Treść:" VerticalAlignment="Top"/>
        <TextBox Grid.Row="1" Margin="50,5,0,0"
                 Text="{Binding Note.Content, Mode=TwoWay}"
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Zapisz" Width="75" Margin="0,0,5,0"
                    Command="{Binding SaveCommand}"/>
            <Button Content="Anuluj" Width="75"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
