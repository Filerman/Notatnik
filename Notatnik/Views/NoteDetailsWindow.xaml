<Window x:Class="Notatnik.Views.NoteDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edytuj notatkę"
        Height="450"
        Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FontFamily="Segoe UI"
        FontSize="12">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Tytuł notatki -->
            <RowDefinition Height="*"/>
            <!-- Treść notatki (multiline TextBox) -->
            <RowDefinition Height="Auto"/>
            <!-- Przyciski Zapisz/Anuluj -->
        </Grid.RowDefinitions>

        <!-- Pole Tytułu -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
            <TextBlock Text="Tytuł:" VerticalAlignment="Center" Width="50"/>
            <TextBox Text="{Binding Note.Title, UpdateSourceTrigger=PropertyChanged}"
                     Width="500"/>
        </StackPanel>

        <!-- Multiline TextBox dla zawartości notatki -->
        <TextBox Grid.Row="1"
                 Text="{Binding Note.Content, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"/>

        <!-- Przycisk Zapisz i Anuluj -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button Content="Zapisz"
                    Width="80"
                    Margin="0,0,5,0"
                    Command="{Binding SaveCommand}"/>
            <Button Content="Anuluj"
                    Width="80"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
