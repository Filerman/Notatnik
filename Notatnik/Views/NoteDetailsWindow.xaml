<Window x:Class="Notatnik.Views.NoteDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szczegóły notatki"
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="ToolbarBtn" TargetType="ToggleButton">
            <Setter Property="Width"  Value="26"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tytuł -->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Tytuł:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox Width="300"
                     Text="{Binding Note.Title, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Zawartość -->
        <Grid Grid.Row="1">

            <!-- Checklista -->
            <ItemsControl ItemsSource="{Binding Note.ChecklistItems}"
                          Visibility="{Binding IsChecklist, Converter={StaticResource BoolToVis}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <CheckBox IsChecked="{Binding IsChecked}" Margin="0,0,6,0"/>
                            <TextBox Width="600"
                                     Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"/>
                            <Button Content="×" Width="24" Height="24" Margin="4,0,0,0"
                                    Command="{Binding DataContext.RemoveChecklistItemCommand,
                                                      RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Zwykła notatka -->
            <TextBox AcceptsReturn="True" TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Visibility="{Binding IsRegular, Converter={StaticResource BoolToVis}}"
                     Text="{Binding Note.Content, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Długa (RichText) -->
            <DockPanel Visibility="{Binding IsLongFormat, Converter={StaticResource BoolToVis}}">
                <ToolBar DockPanel.Dock="Top">
                    <ToggleButton Style="{StaticResource ToolbarBtn}"
                                  FontWeight="Bold"   ToolTip="Bold"
                                  Click="Bold_Click">B</ToggleButton>
                    <ToggleButton Style="{StaticResource ToolbarBtn}"
                                  FontStyle="Italic" ToolTip="Italic"
                                  Click="Italic_Click">I</ToggleButton>
                    <ToggleButton Style="{StaticResource ToolbarBtn}"
                                  ToolTip="Underline" Click="Underline_Click">
                        <TextBlock TextDecorations="Underline">U</TextBlock>
                    </ToggleButton>
                    <Separator/>
                    <Button Content="A+" Padding="4" Click="IncreaseFont_Click"/>
                    <Button Content="A-" Padding="4" Click="DecreaseFont_Click"/>
                </ToolBar>

                <RichTextBox x:Name="RichTextEditor"
                             Margin="0,4,0,0"
                             VerticalScrollBarVisibility="Auto"/>
            </DockPanel>
        </Grid>

        <!-- Przyciski -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Dodaj pozycję" Margin="0,0,6,0"
                    Visibility="{Binding IsChecklist, Converter={StaticResource BoolToVis}}"
                    Click="AddChecklistItem_Click"/>
            <Button Content="Zapisz"  Width="100" Margin="0,0,6,0"
                    Click="Save_Click"/>
            <Button Content="Anuluj" Width="100"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
